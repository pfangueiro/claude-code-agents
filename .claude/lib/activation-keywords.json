    "expertise": {
      "expert": ["advanced", "expert", "complex", "sophisticated", "professional"],
      "intermediate": ["standard", "typical", "common", "regular", "normal"],
      "beginner": ["simple", "basic", "easy", "straightforward", "elementary"]
    }
  }
}